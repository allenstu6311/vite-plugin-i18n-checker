{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Vite Dev",
        "program": "${workspaceFolder}/node_modules/vite/bin/vite.js",
        "args": ["--force"],
        "skipFiles": ["<node_internals>/**"],
        "autoAttachChildProcesses": true
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Vite Build",
        "program": "${workspaceFolder}/node_modules/vite/bin/vite.js",
        "args": ["build"],
        "skipFiles": ["<node_internals>/**"],
        "autoAttachChildProcesses": true
      }
    ]
  }
  